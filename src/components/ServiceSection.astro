---
import datasets from "../json/services_on_homepage.json";
// TODO: get list from glob
---

<div class="hero bg-base-300 min-h-screen mx-auto max-w-full">
  <div class="hero-content flex flex-col">
    <div class="flex flex-col px-4 mt-32">
      <div class="p-5 flex flex-col">
        <h2 class="text-5xl md:text-6xl px-4">サービス</h2>
        <p class="px-5 text-base">公開サービス</p>
      </div>

      <!-- list -->
      <div class="flex flex-row gap-3">
        {
          datasets.map((dataset) => {
            return (
              <div class="flex flex-col items-center justify-center border border-primary rounded-md ">
                <div class="w-full">
                  <img src={dataset.image} alt={dataset.title} />
                </div>
                <div class="w-full">
                  <h3 class="text-primary text-3xl">{dataset.title}</h3>
                  <p class="text-base">{dataset.description}</p>
                  <a href={dataset.url} class="link link-secondary">
                    詳細
                  </a>
                </div>
              </div>
            );
          })
        }
      </div>
    </div>
    <div class="text-base-content text-right py-10">
      <a href="/services" class="btn btn-primary w-full">すべてのサービス</a>
    </div>
  </div>
</div>
