---
const data = [
  {
    name: "山田 太造",
    name_ruby: "Taizo Yamada",
    url: "https://researchmap.jp/j618",
    url_in_site:"/references#yamada",
    img: "https://researchmap.jp/j618/avatar.jpg",
  },
  {
    name: "中村 覚",
    name_ruby: "Satoru Nakamura",
    url: "https://researchmap.jp/nakamura.satoru",
    url_in_site:"/references#nakamura",
    img: "https://researchmap.jp/nakamura.satoru/avatar.jpeg",
  },
  {
    name: "劉 冠偉",
    name_ruby: "Guanwei Liu",
    url: "https://researchmap.jp/liuguanwei",
    url_in_site:"/references#liu",
    img: "https://researchmap.jp/liuguanwei/avatar.JPG",
  },
];
---

<div
  class="hero bg-base-100 text-base-content mx-auto min-h-screen max-w-md md:max-w-full"
>
  <div class="hero-content text-center">
    <div class="w-full max-w-md">
      <h2 class="mt-20 mb-2 text-4xl font-extrabold md:text-6xl">メンバー</h2>
      <div
        class="my-20 flex w-full flex-col space-y-2 md:flex-row md:space-y-0 md:space-x-2"
      >
        {
          data.map((item) => (
            <a href={item.url_in_site} class="card bg-base-100 text-base-content mx-auto w-full max-w-xs flex-1 p-8">
              <div class="avatar">
                <div class="w-24 rounded-xl">
                  <img src={item.img} />
                </div>
              </div>
              <h3 class="text-lg font-bold">{item.name}</h3>
              <h4 class="text-base">{item.name_ruby}</h4>
            </a>
          ))
        }
      </div>
    </div>
  </div>
</div>
